{
  "name": "news_app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@types/redux-mock-store": "^1.0.6",
    "axios": "^0.26.1",
    "bootstrap": "^5.3.3",
    "cypress": "^13.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.14.2",
    "react-scripts": "^3.0.1",
    "redux": "^4.1.2",
    "redux-mock-store": "^1.5.4",
    "redux-saga": "^1.1.3",
    "typescript": "^4.6.4",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "SET NODE_OPTIONS=--openssl-legacy-provider && react-scripts start",
    "build": "SET NODE_OPTIONS=--openssl-legacy-provider && react-scripts build",
    "test": "react-scripts test --watchAll --coverage",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "lint-fix": "eslint src --fix",
    "prettier": "prettier src --write"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/index.tsx",
      "!src/services/network/NetworkService.ts",
      "!src/store/sagas/appSaga.tsx",
      "!src/store/reducers/appSlice.tsx",
      "!src/services/network/client.ts",
      "!src/store/getStore.tsx"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "prettier src --write",
      "eslint src --fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/react": "^8.0.2",
    "@cypress/webpack-dev-server": "^3.10.0",
    "sonarqube-scanner": "^4.0.1"
  }
}
